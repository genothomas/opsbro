{
  "installor": {
    "name": "mysql",
    "note": "This installer will install the mysql server if you set the server into the mysql user defined group. Support debian (8 and lower) and centos/redhat platforms.",
    "if": "is_in_defined_group('mysql')",
    "environments": [
      {
        "name": "debian 8",
        "if": "{{collector.system.os.linux.distribution}} == 'debian' and {{collector.system.os.linux.major_version}} == 8",
        "packages": [
          "mysql-server-5.5"
        ]
      },
      {
        "name": "debian",
        "if": "{{collector.system.os.linux.distribution}} == 'debian'",
        "packages": [
          "mysql-server"
        ]
      },
      {
        "name": "centos",
        "if": "{{collector.system.os.linux.distribution}} == 'centos' or {{collector.system.os.linux.distribution}} == 'redhat'",
        "packages": [
          "mysql"
        ]
      }
    ]
  }
}
